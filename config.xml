<?xml version='1.0' encoding='utf-8'?>
<widget id="io.mrtino.soundboard" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sounds like shit</name>
    <description>
        Une soundboard de politiciens qui devraient rendre l'argent.
    </description>
    <author email="waste@mrtino.eu" href="https://mrtino.eu">
        Monsieur Tino
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
      <allow-intent href="market:*" />
      <icon src="res/android/mipmap-hdpi/icon.png" density="hdpi" />
      <icon src="res/android/mipmap-ldpi/icon.png" density="ldpi" />
      <icon src="res/android/mipmap-mdpi/icon.png" density="mdpi" />
      <icon src="res/android/mipmap-xhdpi/icon.png" density="xhdpi" />
      <icon src="res/android/mipmap-xxhdpi/icon.png" density="xxhdpi" />
      <icon src="res/android/mipmap-xxxhdpi/icon.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.1.2" />
</widget>
